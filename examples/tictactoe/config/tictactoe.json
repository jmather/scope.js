{
  "board": {
    "type": "grid-collection",
    "rows": 3,
    "cols": 3,
    "includes": [ "player1.board", "player2.board" ]
  },
  "player1.board": {
    "type": "grid",
    "rows": 3,
    "cols": 3
  },
  "player2.board": {
    "type": "grid",
    "rows": 3,
    "cols": 3
  },
  "turn": {
    "type": "counter",
    "min": 1,
    "default": 1
  },
  "game": {
    "type": "scope",
    "choices": {
      "placeX": {
        "when":[
          "turn % 2 == 0"
        ],
        "instructions": [
          { "instruction": "place", "gridValue": "player1.board", "referenceGridValue": "board", "data": "X" },
          { "instruction": "increment", "counterValue": "turn", "amount": 1 }
        ]
      },
      "placeO": {
        "when":[
          "turn % 2 == 1"
        ],
        "instructions": [
          { "instruction": "place", "gridValue": "player2.board", "referenceGridValue": "board", "data": "O" },
          { "instruction": "increment", "counterValue": "turn", "amount": 1 }
        ]
      }
    }
  }
}